<div class="inner-zoom card w-100 h-100 p-3 shadow">
  <button type="button" class="close text-right" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <div class="portfolio_item">
    <%#= image_tag item.logo + '_logo.png' , class: 'framework mb-2 d-block mx-auto ' + item.css_class, alt:'framework used' %>
    <h3 class="mb-2 text-center"> <%= link_to item.title, item.url, class:item.css_class, target:"_blank" %> </h3>

    <div class="description mx-auto">
      <p> <%= raw item.description %> </p>
    </div>

    <div class="link-container text-center">
      <% if item.url.present? %>
        <%= link_to 'See live Page!', item.url, target:"_blank" %>
      <% else %>
      <% end  %>
    </div>
    <%= link_to image_tag(item.image_url, class: 'border w-80 mx-auto portfolio_active', alt:'portfolio image of website'), item.url, target:"_blank" %>
  </div>
</div>
