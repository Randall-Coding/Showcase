<div class="col-lg-6 col-xl-3 p-3">
  <div class="card riser">
    <div class="portfolio_item">
      <%= image_tag(item.logo + '_logo.png' , class: 'framework mb-2 ' + item.css_class, alt:'framework used') %>
      <br>
      <h3 class="mb-2"> <%= link_to item.title, item.url, class:item.css_class, target:"_blank" %> </h3>

      <div class="description">
        <p> <%= raw item.description %> </p>
      </div>

      <%= link_to image_tag(item.image_url, class: 'border card-img-bottom w-100 portfolio_active', alt:'portfolio image of website'), item.url, target:"_blank" %>
    </div>
  </div>
</div>
