<div class="portfolio-container">
<main>
  <ul>
  <% @portfolio_items.each do |item| %>
    <li>
      <h3> <%= link_to item.title, item.url, class:item.css_class,target:"_blank" %> </h3>
      <%= image_tag(item.logo + '_logo.png' , class: 'framework ' + item.css_class, alt:'framework used') %>

      <div class="description">
        <p> <%= raw item.description %> </p>
      </div>

      <div class="slideshow">
        <%= link_to image_tag(item.image_url, class: 'portfolio_active', alt:'portfolio image of website'), item.url, target:"_blank" %>
      </div>
    </li>
    <hr/>
  <% end %>
  </ul>
